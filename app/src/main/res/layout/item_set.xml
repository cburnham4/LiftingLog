<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Weight: "
        android:id="@+id/tv_weight_static"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text=""
        android:id="@+id/tv_itemweight"
        android:layout_toRightOf="@id/tv_weight_static"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_reps_static"
        android:layout_toRightOf="@id/tv_itemweight"
        android:text="Reps: "/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tv_itemreps"
        android:layout_toRightOf="@+id/tv_reps_static"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_itemreps"
        android:text=""
        android:id="@+id/tv_itemdate"/>

</RelativeLayout>
